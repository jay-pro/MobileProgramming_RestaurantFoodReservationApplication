<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/txtMaBanAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="Mã bàn ăn"
        android:textColor="#0A2CE8"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTenBanAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:text="Tên Bàn ăn"
        android:textColor="#0A2CE8"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMaBanAn" />

    <TextView
        android:id="@+id/txtSoLuongCho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="Số lượng chỗ"
        android:textColor="#0A2CE8"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTenBanAn" />

    <Button
        android:id="@+id/btnSuaDongBanAn"
        android:layout_width="162dp"
        android:layout_height="44dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:text="Sửa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSoLuongCho" />

    <Button
        android:id="@+id/btnXoaBan"
        android:layout_width="157dp"
        android:layout_height="47dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="152dp"
        android:text="Xóa"
        app:layout_constraintStart_toEndOf="@id/btnSuaDongBanAn"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>