<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtMaNhanVien"
        android:textSize="24sp"
        android:textColor="#0A2CE8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="Mã bàn ăn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSoLuongCho"
        android:textSize="24sp"
        android:textColor="#0A2CE8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:text="Số lượng chỗ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTenNhanVien" />

    <TextView
        android:id="@+id/txtTenNhanVien"
        android:textSize="24sp"
        android:textColor="#0A2CE8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="Tên Bàn ăn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMaNhanVien" />

    <Button
        android:id="@+id/btnSuaBan"
        android:layout_width="162dp"
        android:layout_height="44dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:text="Sửa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSoLuongCho" />

    <Button
        android:id="@+id/btnXoaBan"
        android:layout_width="157dp"
        android:layout_height="47dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="152dp"
        android:text="Xóa"
        app:layout_constraintStart_toEndOf="@+id/btnSuaBan"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>