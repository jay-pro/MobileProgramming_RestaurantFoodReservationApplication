<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:padding="10dp"
        android:id="@+id/imageviewHinh"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <TextView
        android:textColor="#ff00"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_toRightOf="@id/imageviewHinh"
        android:id="@+id/textviewBan"
        android:text="Bàn số"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textviewMaDonDat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewBan"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageviewHinh"
        android:text="Mã đơn"
        android:textColor="#0015D4"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textviewThoiGian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewMaDonDat"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageviewHinh"
        android:text="Thời gian"
        android:textColor="#0015D4"
        android:textSize="22sp" />
</RelativeLayout>